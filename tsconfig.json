{
  "exclude": [
    "integration-tests",
    "lib",
    "**/*.test.ts"
  ],
  "include": [
    "node_modules/cypress",
    "**/*.ts"
  ],
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["cypress", "node"]
  }
}
